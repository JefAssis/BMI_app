<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme._1_Projeto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_800</item>
        <item name="colorPrimaryVariant">@color/blue_50</item>
        <item name="colorOnPrimary">@color/blue_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_400</item>
        <item name="colorSecondaryVariant">@color/blue_50</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Title1" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:textColor">@color/blue_50</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Cards1" parent="CardView">
        <item name="cardCornerRadius">45dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">135dp</item>
        <item name="elevation">20dp</item>
        <item name="android:backgroundTint">@color/blue_800</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="EditsText1" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/blue_50</item>
        <item name="android:textColorHint">@color/blue_50</item>
    </style>

    <style name="Title2" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:textColor">@color/blue_100</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>